depend() {
	need dbus bluetooth
}

start() {
	ebegin "Starting Wiimotedev-daemon"
        start-stop-daemon --start -q --exec /usr/sbin/wiimotedev-daemon
	eend $?
}

stop() {
	ebegin "Stopping Wiimotedev-daemon"
	start-stop-daemon --stop -q --pidfile /var/run/wiimotedev-daemon.pid
	eend $?
}
