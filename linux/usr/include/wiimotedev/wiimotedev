namespace wiimotedev {

constexpr auto WIIMOTEDEV_BTN_LEFT = 1ull << 0;
constexpr auto WIIMOTEDEV_BTN_RIGHT = 1ull << 1;
constexpr auto WIIMOTEDEV_BTN_UP = 1ull << 2;
constexpr auto WIIMOTEDEV_BTN_DOWN = 1ull << 3;
