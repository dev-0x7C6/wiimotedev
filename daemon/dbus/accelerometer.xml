<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
	<interface name="org.wiimotedev.accelerometer">
		<method name="isAccelerometerSupported">
			<arg name="value" type="b" direction="out" />
		</method>
		<method name="isAccelerometerEnabled">
			<arg name="id" type="u" direction="in" />
			<arg name="value" type="b" direction="out" />
		</method>
		<method name="setAccelerometerEnabled">
			<arg name="id" type="u" direction="in" />
			<arg name="value" type="b" direction="out" />
		</method>
		<signal name="accelerometerDataChanged">
			<arg name="id" type="u" direction="out" />
			<arg name="ext" type="i" direction="out" />
			<arg name="x" type="i" direction="out" />
			<arg name="y" type="i" direction="out" />
			<arg name="x" type="i" direction="out" />
			<arg name="pitch" type="i" direction="out" />
			<arg name="roll" type="i" direction="out" />
		</signal>
	</interface>
</node>
